GITHUB_CREDENTIALS=~/.github_info
if [ -f $GITHUB_CREDENTIALS ]; then
    source $GITHUB_CREDENTIALS
    # '.github_info' must contain the following information
    # USERNAME="<username>"
    # PASSWORD="<password>"
    # ORGANIZATION="<organisation>"
    #
    # protect the GitHub login information:
    # - storing the file in the home folder of the user(s) that will execute the script
    # - defining the ownershit of '.github_info' to <user>:<user>
    # - defining the permissions of '.github_info' to 600
    #
else
    # default values
    USERNAME="username"
    PASSWORD="password"
    ORGANIZATION="organisation"
fi

# Arrays definition

NEPO=""
SSH_URL=""
NAME=""

# used to suppress curl noise
STDERR_REDIR='/dev/null'
for (( page=1; page<100; page++ ));
do
  GIT_URL="curl -u \"$USERNAME:$PASSWORD\" https://api.github.com/orgs/$ORGANIZATION/repos?page=$page\&per_page=100"

  names=($(curl -u "$USERNAME:$PASSWORD" https://api.github.com/orgs/$ORGANIZATION/repos?page=$page\&per_page=100 2> /dev/null | grep name | cut -f4 -d'"' ))

  ssh_urls=($(curl -u "$USERNAME:$PASSWORD" https://api.github.com/orgs/$ORGANIZATION/repos?page=$page\&per_page=100 2> /dev/null | grep ssh_url | cut -f4 -d'"' ))

  elements=${#names[@]}

  for (( i=0; i<${elements}; i++ ));
  do
          echo "name=${names[$i]} ssh_url=${ssh_urls[$i]}"
  done
done
